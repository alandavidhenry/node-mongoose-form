<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Personal Details</h1>
    <div class="col-6 offset-3">
        <form action="/people/<%=person._id%>/edit?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="person[title]" value="<%=person.title%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="firstName">First Name</label>
                <input class="form-control" type="text" id="firstName" name="person[firstName]" value="<%=person.firstName%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="surname">Surname</label>
                <input class="form-control" type="text" id="surname" name="person[surname]" value="<%=person.surname%>">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Save changes</button>
            </div>
        </form>
        <a href="/">Back to Home</a>
    </div>
</div>